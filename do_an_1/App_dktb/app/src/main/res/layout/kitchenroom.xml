<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F7F9F9 "
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <TextView

        android:layout_marginRight="50dp"
        android:id="@+id/kitchenroomheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"

        android:text="Kitchen Room"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"  />

    <RelativeLayout
        android:id="@+id/fridge"

        android:layout_below="@id/kitchenroomheader"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/botron"
        android:backgroundTint="#E5E7E9"
        >
        <Switch
            android:id="@+id/switchfridge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fridge      "
            android:layout_marginTop="20dp"
            android:layout_below="@id/imagefridge"
            android:padding="20dp"
            android:textSize="16dp"
            />

        <ImageView
            android:id="@+id/imagefridge"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="40dp"
            android:src="@drawable/fridge" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/lampliving"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_below="@id/kitchenroomheader"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/botron"
        android:backgroundTint="#E5E7E9"
        >


        <Switch
            android:id="@+id/switchstove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stove"
            android:layout_marginTop="20dp"
            android:layout_below="@id/imagestove"
            android:padding="20dp"
            android:textSize="16dp"
            />

        <ImageView
            android:id="@+id/imagestove"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="40dp"
            android:src="@drawable/stove" />





    </RelativeLayout>

    <RelativeLayout

        android:layout_below="@id/fridge"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/botron"
        android:backgroundTint="#E5E7E9">

        <ImageView
            android:id="@+id/lighticon"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/countertop"

            />



        <Switch
            android:id="@+id/swLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Light"
            android:layout_marginTop="20dp"
            android:layout_below="@id/lighticon"
            android:padding="20dp"
            android:textSize="16dp"

            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/exhaustliving"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_below="@id/lampliving"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/botron"
        android:backgroundTint="#E5E7E9"
        >


        <Switch
            android:id="@+id/swExhaust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exhaust"
            android:layout_marginTop="20dp"
            android:layout_below="@id/exhausticon"
            android:padding="20dp"
            android:textSize="16dp"
            />

        <ImageView
            android:id="@+id/exhausticon"
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_marginTop="40dp"
            android:src="@drawable/kitchenhood" />





    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/botron"

        app:itemIconTint="#2196F3"
        app:itemTextColor="@color/black"
        app:menu="@menu/menu_navigation" />

</RelativeLayout>
